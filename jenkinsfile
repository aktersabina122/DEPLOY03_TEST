pipeline {
  agent any
  stages {
    stages ('test') {
      steps {
      sh '''#!/bin/bash
      python3v-m venv test3
      source test3/bin/activate
      pip install pip --upgrade
      pip install pytest
      py.test --verbose --junit-xml sources/test_calc.py
      '''
      }
      post {
      always {
      junit 'test-reports/results.xml'
      }
     }
    }
   }
  
